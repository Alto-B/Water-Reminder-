<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseDateActivity">

    <TextView
        android:id="@+id/reminder_time_picker"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/water_type_spinner"
        android:layout_alignParentRight="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="87dp"
        android:layout_toEndOf="@+id/time"
        android:text="00:00"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/repeat_date_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_time_picker"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="58dp"
        android:layout_toEndOf="@+id/repeatImage"
        android:layout_toRightOf="@+id/repeatImage" />

    <ImageView
        android:id="@+id/time"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/waterDrop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="43dp"
        android:layout_marginRight="26dp"
        android:src="@drawable/ic_access_time_black_24dp" />

    <ImageView
        android:id="@+id/waterDrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="177dp"
        android:src="@drawable/ic_opacity_black_24dp" />

    <Spinner
        android:id="@+id/water_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"
        android:layout_toEndOf="@+id/waterDrop"
        android:layout_toRightOf="@+id/waterDrop" />

    <ImageView
        android:id="@+id/repeatImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/ic_replay_black_24dp" />

    <Button
        android:id="@+id/save_reminder"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundedbutton"
        android:text="save"
        android:textColor="@color/lightGrey"
        android:textSize="30dp" />


</RelativeLayout>